{

"COMMANDS": ["epm_sandbox SANDBOX-ARGS PPPP < XXXX-PPPP.in > XXXX-PPPP.out 2> XXXX-PPPP.err",
             "score SCORING-ARGS < XXXX-PPPP.out 3< XXXX-PPPP.test > XXXX-PPPP.score"],

"LOCAL-REQUIRES":["XXXX-PPPP.in", "PPPP"],
"REMOTE-REQUIRES":["XXXX-PPPP.test"],
"KEEP":    ["XXXX-PPPP.score"],
"SHOW":    ["XXXX-PPPP.err","XXXX-PPPP.score"],

"OPTIONS": {
     "cputime: { "type": "integer",
                 "range": ["1", "30"],
		 "default": "30",
		 "description": "allowed CPU time in seconds",
		 "name": "CPUTIME" },
     "cputime-form: { "values": ["-cputime CPUTIME"],
		      "name": "SANDBOX-ARGS" },
     "space":  { "type": "integer",
                 "range": ["16", "2048"],
		 "default": "2048",
		 "description": "allowed virtual memory in megabytes",
		 "name": "SPACE" },
     "space-form":  { "values": ["-space SPACEm"],
		      "name": "SANDBOX-ARGS" },
     "filesize": { "type": "integer",
                   "range": ["1", "2048"],
		   "default": "2048",
		   "description": "allowed output files size in kilobytes",
		   "name": "FILESIZE" },
     "filesize-form": { "values": ["-filesize FILESIZEk"],
		        "name": "SANDBOX-ARGS" },

     "whitespace": { "values": ["space", ""],
		     "name": "SCORING-ARGS" },
     "integer-abs": { "type": "float",
                      "range": [1e-300,1e300],
		      "name": "INTABS" },
     "integer-rel": { "type": "float",
                      "range": [1e-300,2],
		      "name": "INTREL" },
     "integer-form": { "values": ["",
                                "integer INTABS -",
                                "integer INTABS INTREL",
                                "integer - INTREL -"],
		      "name": "SCORING-ARGS" },
     "float-abs": { "type": "float",
                    "range": [1e-300,1e300],
		    "name": "FLTABS" },
     "float-rel": { "type": "float",
                    "range": [1e-300,2],
		    "name": "FLTREL" },
     "float-form": { "values": ["",
                                "float FLTABS -",
                                "float FLTABS FLTREL",
                                "float - FLTREL -"],
		      "name": "SCORING-ARGS" },
     "decimal": { "values": ["exponent decimal sign", ""],
		  "name": "SCORING-ARGS" },
     "column": { "values": ["column", ""],
		 "name": "SCORING-ARGS" },
     "letter-case": { "values": ["", "letter-case"],
		      "name": "SCORING-ARGS" },
     "words-are-format": { "values": ["", "words-are-format"],
			   "name": "SCORING-ARGS" },
     "nonumber": { "values": ["", "nonumber"],
		   "name": "SCORING-ARGS" }}

}
