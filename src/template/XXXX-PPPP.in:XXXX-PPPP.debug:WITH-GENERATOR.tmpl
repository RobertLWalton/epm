{

"COMMANDS": ["generate_PPP < XXXX-PPPP.in | epm_sandbox SSSS PPPP DDDD > XXXX-PPPP.debug 2> XXXX-PPPP.err"]

"LOCAL-REQUIRES":["XXXX-PPPP.in", "PPPP"],
"REMOTE-REQUIRES":["generate_PPPP"],
"KEEP":    ["XXXX-PPPP.debug"],
"SHOW":    ["XXXX-PPPP.err","XXXX-PPPP.debug"],

"OPTIONS": {
     "cputime: { "type": "integer",
                 "range": ["1", "30"],
		 "default": "30",
		 "description": "allowed CPU time in seconds",
		 "valname": "CPUTIME" },
     "cputime-arg: { "values": ["-cputime CPUTIME"],
		      "argname": "SANDBOX-ARGS" },
     "space":  { "type": "integer",
                 "range": ["16", "2048"],
		 "default": "2048",
		 "description": "allowed virtual memory in megabytes",
		 "valname": "SPACE" },
     "space-arg":  { "values": ["-space SPACEm"],
		      "argname": "SANDBOX-ARGS" },
     "filesize": { "type": "integer",
                   "range": ["1", "2048"],
		   "default": "2048",
		   "description": "allowed output files size in kilobytes",
		   "valname": "FILESIZE" },
     "filesize-arg": { "values": ["-filesize FILESIZEk"],
		        "argname": "SANDBOX-ARGS" },
     "debug": { "type": "args",
		"argname": "DEBUG-ARGS" }}
}
