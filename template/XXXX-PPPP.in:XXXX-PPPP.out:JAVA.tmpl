
{

"COMMANDS": ["epm_sandbox SANDBOX-ARGS java JAVA-FLAGS PPPP < XXXX-PPPP.in > XXXX-PPPP.out 2> XXXX-PPPP.err"],

"LOCAL-REQUIRES":["XXXX-PPPP.in", "PPPP.class"],
"KEEP":    ["XXXX-PPPP.out"],
"SHOW":    ["XXXX-PPPP.err","XXXX-PPPP.out"],

"OPTIONS":
{
     "cputime": { "type": "integer",
                  "range": ["1", "30"],
		  "default": "30",
		  "description": "allowed CPU time in seconds",
		  "valname": "CPUTIME" },
     "cputime-arg": { "values": ["-cputime CPUTIME"],
		      "argname": "SANDBOX-ARGS" },
     "space":  { "type": "integer",
                 "range": ["16", "2048"],
		 "default": "2048",
		 "description": "allowed virtual memory in megabytes",
		 "valname": "SPACE" },
     "space-arg":  { "values": ["-space SPACEm"],
		      "argname": "SANDBOX-ARGS" },
     "filesize": { "type": "integer",
                   "range": ["1", "2048"],
		   "default": "2048",
		   "description": "allowed output files size in kilobytes",
		   "valname": "FILESIZE" },
     "filesize-arg": { "values": ["-filesize FILESIZEk"],
		        "argname": "SANDBOX-ARGS" },

     "gc": { "values": ["-XX:+UseSerialGC"],
             "argname": "JAVA-FLAGS" },
     "ss": { "type": "integer",
             "range": ["4","64"],
             "valname": "STACK-SIZE" },
     "ss-arg": { "values": ["-XssSTACK-SIZEm"],
                 "argname": "JAVA-FLAGS" },
     "ms": { "type": "integer",
             "range": ["128","1920"],
             "valname": "HEAP-SIZE" },
     "ms-arg": { "values": ["-XmsHEAP-SIZEm -XmxHEAP-SIZEm"],
                 "argname": "JAVA-FLAGS" },
     "ea": { "values": ["-ea", ""],
             "argname": "JAVA-FLAGS" }}
}
