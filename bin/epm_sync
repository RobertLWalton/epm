#! /bin/bash
#
# File:		epm_sync
# Author:	Bob Walton (walton@acm.org)
# Date:		Wed Jun 17 22:29:27 EDT 2020

n=''
case "$1" in
( "" ) echo "epm_sync [-n] SOURCE DESTINATION"
       exit 0;;
( -n ) n='-n'; shift;;
esac

echo rsync -avc $n "$@"
rsync -avc $n \
      --exclude=+perm+ --exclude=+actions+ \
      --exclude=+changes+ --exclude=+lock+ \
      --exclude=+submits+ \
      --include='generate-*.*' --exclude='generate-*' \
      --include='filter-*.*' --exclude='filter-*' \
      "$@"
